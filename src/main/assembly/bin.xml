<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <moduleSets>

        <moduleSet>
            <includes>
                <include>org.sigpep:sigpep-app</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>src/main/resources</directory>
                        <includes>
                            <include>**/config/*</include>
                        </includes>
                        <!--<outputDirectory>/</outputDirectory>-->
                    </fileSet>
                    <fileSet>
                        <directory>src/main/scripts</directory>
                        <includes>
                            <include>*</include>
                        </includes>
                        <outputDirectory>/</outputDirectory>
                        <fileMode>0777</fileMode>
                    </fileSet>
                </fileSets>
            </sources>
            <binaries>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>lib</outputDirectory>
                        <unpack>false</unpack>
                        <scope>runtime</scope>
                    </dependencySet>
                </dependencySets>                
            </binaries>
        </moduleSet>

        <moduleSet>
            <includes>
                <include>org.sigpep:sigpep-model</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>src/main/resources</directory>
                        <includes>
                            <!--<include>organisms.properties</include>-->
                            <include>ptm.properties</include>
                        </includes>
                        <outputDirectory>resource</outputDirectory>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>

        <moduleSet>
            <includes>
                <include>org.sigpep:sigpep-persistence</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>src/main/resources</directory>
                        <includes>
                            <include>**/config/*</include>
                            <include>**/sql/*</include>                   
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>

        <moduleSet>
            <includes>
                <include>org.sigpep:sigpep-util</include>
            </includes>
        </moduleSet>

        <moduleSet>
            <excludes>
                <exclude>org.sigpep:sigpep-web</exclude>
            </excludes>
        </moduleSet>

